<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activity.MainActivity_ChitietSach">



   <androidx.appcompat.widget.Toolbar
       android:id="@+id/androidxtoolbar"
       android:layout_width="match_parent"
       app:title="Chi Tiết Sách"

       android:background="#3F51B5"
       android:layout_height="?attr/actionBarSize">

      <LinearLayout
          android:layout_width="wrap_content"
          android:layout_gravity="right"
          android:orientation="horizontal"
          android:layout_height="?attr/actionBarSize">

         <ImageView
             android:id="@+id/imgsearch"
             android:layout_marginTop="10dp"
             android:layout_marginRight="15dp"
             android:src="@drawable/ic_baseline_search_24"
             android:layout_width="40dp"
             android:layout_height="40dp"/>

         <FrameLayout
             android:id="@+id/trangchugiohang"
             android:layout_width="55dp"
             android:layout_height="?attr/actionBarSize">

            <ImageView
                android:layout_marginTop="10dp"
                android:src="@drawable/ic_baseline_shopping_cart_24"
                android:layout_width="40dp"
                android:layout_height="40dp"/>

            <com.nex3z.notificationbadge.NotificationBadge
                android:id="@+id/menu_sl"
                android:layout_gravity="top|right"
                android:layout_width="30dp"
                android:layout_height="30dp" />
         </FrameLayout>

      </LinearLayout>



   </androidx.appcompat.widget.Toolbar>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

      <LinearLayout
          android:id="@+id/llimage"
          android:layout_width="match_parent"
          android:layout_height="300dp"
          android:layout_alignParentTop="true"
          android:layout_marginTop="5dp"
          android:background="#E8E6E6"
          android:orientation="vertical">

         <ImageView

             android:id="@+id/imgchitiet"
             android:layout_width="200dp"
             android:layout_height="280dp"

             android:layout_gravity="center" />
      </LinearLayout>

      <TextView
          android:id="@+id/tenchitiet"
          android:layout_width="match_parent"
          android:layout_height="70dp"
          android:layout_below="@+id/llimage"

          android:text="aaaaaaaaaaaaaaaaaa"
          android:textColor="@color/black"
          android:textSize="25dp"
          tools:ignore="UnknownId" />

      <TextView
          android:id="@+id/giachitiet"
          android:layout_width="match_parent"
          android:layout_height="35dp"
          android:layout_below="@+id/tenchitiet"
          android:text="50.,000"
          android:textColor="#FF0000"
          android:textSize="25dp"
          android:textStyle="bold" />

      <LinearLayout
          android:id="@+id/llsoluong"
          android:layout_width="200dp"
          android:layout_height="60dp"
          android:layout_above="@+id/btnthem"
          android:orientation="horizontal">

         <TextView
             android:layout_width="100dp"
             android:layout_height="60dp"
             android:text="Số lượng mua"

             android:textColor="@color/black"
             android:textStyle="bold" />

         <Spinner
             android:id="@+id/spinner"
             android:layout_width="100dp"
             android:layout_height="60dp" />
      </LinearLayout>

      <androidx.appcompat.widget.AppCompatButton
          android:id="@+id/btnthem"
          android:background="#3F51B5"
          android:layout_width="match_parent"
          android:layout_height="50dp"
          android:text="+  Thêm vào giỏ hàng  +"
          android:textSize="20dp"
          android:textAllCaps="false"
          android:textColor="@color/white"
          tools:ignore="HardcodedText"
          android:layout_alignParentBottom="true"
          />
   </RelativeLayout>









</LinearLayout>