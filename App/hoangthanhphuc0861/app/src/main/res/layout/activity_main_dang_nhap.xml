<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#E8E6E6"
    tools:context=".Activity.MainActivity_DangNhap">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        android:textAlignment="center"
        android:gravity="center"
        android:background="@drawable/logo_newshop"/>

    <EditText
        android:id="@+id/edittext_tendangnhap"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:background="@drawable/rounded_border_black"
        android:textColorHint="#BAA8A2"
        android:layout_marginTop="20dp"
        android:drawablePadding="10dp"
        android:hint="Email người dùng"/>


    <EditText
        android:id="@+id/edittext_matkhau"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="50dp"
        android:paddingLeft="10dp"
        android:textColorHint="#BAA8A2"
        android:background="@drawable/rounded_border_black"
        android:layout_marginTop="20dp"
        android:hint="Mật khẩu"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_dangnhap"
        android:layout_marginTop="20dp"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:background="@drawable/border_black_bottom"
        android:text="ĐĂNG NHẬP"
        android:textColor="@color/white"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/dangky"
        android:layout_width="350dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_border_black"
        android:text="ĐĂNG KÝ"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/quenmatkhau"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="270dp"
        android:text="Quên mật khẩu"
        />

    <TextView
        android:id="@+id/hoacdangnhapvoi"
        android:layout_width="180dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:text="Hoặc đăng nhập với "

        />



</LinearLayout>